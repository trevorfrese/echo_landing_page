<div id = "flash_messages" style = "">
  <% flash.each do |type, message| %>
      <div style="margin: 0" class="alert <%= bootstrap_class_for(type) %> fade in">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= message %>
      </div>
  <% end %>
</div>
<div class ="backup_static_image">
  <div class = "overlay"></div>

  <row>
    <div class="col-xs-6 col-md-4 iphone_image marketing-container">
      <%= image_tag("edited_phone.png", width: 375)%>
    </div>
    <div class="col-sm-4 col-md-8 text_and_info marketing-container">
      <div class="title">
        Echo
      </div>
      <div class ="subtitle">
        We're putting Isla Vista on the map.
      </div>
      <div class="subtitle mobile_note">
        Please view on a laptop for more information.
      </div>
