      <div class = "interested padding_for_row">
        <p class = "interested_text">Want to be an alpha tester?</p>
        <%= form_for @interested_user,  html: {:class => "form-inline centered_form"}, url: url_for(:controller=>"interested_users", :action => "sign_up") do |f| %>
            <%= f.label :email, class: "form-control form-group" %>:
            <%= f.email_field :email, class: "form-control" %>
            <br>
            <br>
            <%= f.submit "Sign me up!", class: "form-control btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </row>
</div>

